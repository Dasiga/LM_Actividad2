             id CDATA #REQUIRED
             tipo_clase CDATA #IMPLIED
			 numero_paginas CDATA #IMPLIED
  >
  <!ELEMENT numero (#PCDATA)>
  <!ELEMENT secciones_revista (seccion_revista+)>
  <!ELEMENT seccion_revista (contenido)>
  <!ATTLIST seccion_revista numero_paginas CDATA #IMPLIED>

  <!-- Definicion etiqueta periodico -->

  <!ELEMENT periodicos (periodico*)>
  <!ELEMENT periodico (secciones_periodico+,indice)>
  <!ATTLIST periodico id CDATA #REQUIRED>
  <!ATTLIST periodico tipo_clase CDATA #IMPLIED>
  <!ATTLIST periodico fecha_publicacion CDATA #IMPLIED>
  <!ATTLIST seccion_periodico tipo CDATA #IMPLIED>
  <!ELEMENT secciones_periodico (seccion_periodico+)>
  <!ELEMENT seccion_periodico (articulo+)>
  <!ELEMENT articulo (contenido_periodico)>
  <!ELEMENT contenido_periodico (#PCDATA)>
  <!ATTLIST articulo autor CDATA #IMPLIED>
]>
